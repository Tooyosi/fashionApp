<% include partials/header %>


<div class="table-wrapper">
        <h2 class="text-center">Registered Trainees</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Courses Registered</th>
            <th>Email</th>
            <th>Reference Number</th>
            <th>Payment Status</th>
            <th>Update</th>
        </tr>
        <%users.forEach((user)=>{%>
        <tr>
            <td><%=user.firstname%></td>
            <td><%=user.course%></td>
            <td><%=user.email%></td>
            <td><%=user.reference%></td>
            <td><%=user.payment_status%></td>
            <form action="/admin/page/<%= user._id%>/delete?_method=DELETE" method="post">
                <td><button type="submit" class="admin-delete-btn">Delete</button></td>
            </form>
        </tr>
        <%})%>
    </table>
</div>

<% include partials/footer %>